<?xml version="1.0" encoding="utf-8"?>
<androidx.slidingpanelayout.widget.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_pane_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/build_type"
            android:text="@string/build_type_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/query_text_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/query_text_input"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:inputType="text"
            android:hint="@string/enter_search_text"
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@id/build_type"
            app:layout_constraintBottom_toTopOf="@id/item_list"
            app:layout_constraintEnd_toStartOf="@id/query_text_input"
            app:layout_constraintStart_toStartOf="parent"
            />
        <Button
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            app:layout_constraintTop_toTopOf="@id/query_text_input"
            app:layout_constraintBottom_toBottomOf="@id/query_text_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/query_text_input"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_list"
            android:name="com.huhn.codingchallengeretrofit.ui.FirstFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            app:layout_constraintTop_toBottomOf="@id/query_text_input"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layoutManager="LinearLayoutManager"
            tools:context="com.huhn.codingchallengeretrofit.ui.MainActivity"
            tools:listitem="@layout/item_list_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- The second child becomes the right (content) pane. In this
       example, android:layout_weight is used to expand this detail pane
       to consume leftover available space when the
       the entire window is wide enough to fit both the left and right pane.-->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/detail_container"
        android:layout_width="300dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:name="com.huhn.codingchallengeretrofit.ui.SecondFragment" />
</androidx.slidingpanelayout.widget.SlidingPaneLayout>